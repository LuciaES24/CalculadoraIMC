<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/calculadoraJoseLuis"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:text="Calculadora Jose Luis"></Button>
        <Button
            android:id="@+id/calculadoraJorge"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:text="Calculadora Jorge"></Button>
        <Button
            android:id="@+id/calculadoraLucia"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:text="Calculadora Lucia"></Button>
        <Button
            android:id="@+id/IMC"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:text="IMC"></Button>
        <Button
            android:id="@+id/salir"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:text="Salir"></Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>