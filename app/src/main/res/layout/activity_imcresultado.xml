<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IMCResultadoActivity">

    <LinearLayout
        android:id="@+id/layoutResultado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/mostrarResultado"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_marginTop="110dp"
            android:editable="false"/>

        <ImageView
            android:id="@+id/imagenResultado"
            android:layout_width="207dp"
            android:layout_height="366dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@id/mostrarResultado"
            android:src="@drawable/imcnormal"
            android:contentDescription="@string/imagensilueta"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>